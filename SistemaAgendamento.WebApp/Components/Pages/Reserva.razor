@page "/reserva/{SalaId:int}"
@layout MainLayout
@rendermode InteractiveServer

@using MudBlazor
@using System.Linq
@using System.Globalization
@using Microsoft.AspNetCore.Components.Forms

<div class="container-fluid mt-4 page-background">

    <MudPaper Class="panel-container">

        <div class="text-center mb-4">
            <MudText Typo="Typo.h4" Class="fw-bold text-primary">
                Reservar Sala: @(SalaTarget?.Nome ?? "Carregando...")
            </MudText>

            <MudText Typo="Typo.subtitle2" Class="text-muted">
                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Color="Color.Error" Class="me-1" />
                @SalaTarget?.Localizacao
            </MudText>
        </div>

        @if (SalaTarget == null)
        {
            <MudAlert Severity="Severity.Error">
                Sala de reunião não encontrada ou ID inválido.
            </MudAlert>
        }
        else
        {
            <div class="row justify-content-center">

                <div class="col-md-5">
                    <div class="card shadow-sm p-4">
                        <h5 class="card-title mb-3">Escolha a Data</h5>

                        <MudDatePicker Label="Selecionar data"
                                       Class="mb-4"
                                       PickerVariant="PickerVariant.Inline"
                                       AdornmentColor="Color.Info"
                                       Color="Color.Info"
                                       Date="selectedDate"
                                       DateChanged="@(d => { selectedDate = d ?? selectedDate; return LoadAvailableSlots(); })">
                        </MudDatePicker>

                        @if (availableSlots.Any())
                        {
                            <h5 class="mb-3">Horários Disponíveis (@selectedDate.ToString("dd/MM"))</h5>

                            <div class="slot-grid">
                                @foreach (var slot in availableSlots)
                                {
                                    @if (slot.IsAvailable)
                                    {
                                        <button type="button"
                                                class="btn @(SelectedSlot == slot.Time ? "btn-success" : "btn-outline-success") slot-item"
                                                @onclick="() => SelectSlot(slot.Time)">
                                            @slot.Time.ToString("HH:mm")
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                class="btn btn-outline-danger slot-item"
                                                title="Ocupado. Clique para solicitar troca."
                                                @onclick="() => AbrirSolicitacaoAsync(slot.ExistingAgendamentoId!.Value, slot.Time)">
                                            @slot.Time.ToString("HH:mm") <i class="fa fa-exchange-alt ms-1"></i>
                                        </button>
                                    }
                                }
                            </div>

                            @if (showSolicitacaoModal)
                            {
                                <div class="modal-backdrop fade show"></div>
                                <div class="modal fade show d-block" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">

                                            <div class="modal-header bg-warning text-dark">
                                                <h5 class="modal-title">Solicitar Horário: @horaInicioSolicitada</h5>
                                                <button type="button" class="btn-close" @onclick="FecharModal"></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>Este horário está ocupado. Deseja pedir ao dono para ceder parte do horário?</p>

                                                <label class="form-label">Data:</label>
                                                <input class="form-control mb-2" type="date" @bind="dataSolicitada" />

                                                <div class="row">
                                                    <div class="col">
                                                        <label class="form-label">Horário de início:</label>
                                                        <select class="form-select" @onchange="OnInicioChanged">
                                                            @foreach (var h in horariosInicio)
                                                            {
                                                                <option value="@h" selected="@(h == horaInicioSolicitada)">
                                                                    @h
                                                                </option>
                                                            }
                                                        </select>
                                                    </div>

                                                    <div class="col">
                                                        <label class="form-label">Horário de término:</label>
                                                        <select class="form-select" @bind="horaFimSolicitada">
                                                            @foreach (var h in horariosFim)
                                                            {
                                                                <option value="@h" selected="@(h == horaFimSolicitada)">
                                                                    @h
                                                                </option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>

                                                <label class="form-label mt-2">Motivo da solicitação:</label>
                                                <textarea class="form-control"
                                                          rows="3"
                                                          @bind="solicitacaoAtual.Justificativa"
                                                          placeholder="Explique o motivo da solicitação..."></textarea>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" @onclick="FecharModal">Cancelar</button>
                                                <button type="button" class="btn btn-warning" @onclick="EnviarSolicitacao">Enviar Pedido</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">Não há horários disponíveis nesta data.</div>
                        }
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card shadow-sm p-4">

                        @if (SelectedSlot.HasValue)
                        {
                            <h5 class="card-title mb-3 text-success">
                                Confirmar: @SelectedSlot.Value.ToString("dd/MM/yyyy - HH:mm")
                            </h5>

                            <EditForm Model="agendamentoFinal" OnValidSubmit="HandleBooking" FormName="FinalBookingForm">
                                <DataAnnotationsValidator />

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Início</label>
                                    <input type="text" class="form-control"
                                           value="@SelectedSlot.Value.ToString("HH:mm")"
                                           disabled />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Término (Duração)</label>

                                    <InputSelect @bind-Value="selectedEndTime" class="form-select">
                                        @foreach (var endTime in validEndTimes)
                                        {
                                            var duration = endTime - SelectedSlot.Value;
                                            <option value="@endTime">
                                                @endTime.ToString("HH:mm") (@FormatarDuracao(duration))
                                            </option>
                                        }
                                    </InputSelect>

                                    <small class="text-muted">Selecione até que horas vai a reserva.</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Seu Nome/Email</label>
                                    <InputText @bind-Value="agendamentoFinal.Titulo" class="form-control" />
                                    <ValidationMessage For="@(() => agendamentoFinal.Titulo)" class="text-danger" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Motivo/Descrição</label>
                                    <InputTextArea @bind-Value="agendamentoFinal.Descricao" class="form-control" rows="3" />
                                </div>

                                <button type="submit" class="btn btn-success w-100">
                                    Confirmar Reserva
                                </button>
                            </EditForm>
                        }
                        else
                        {
                            <p class="text-center text-muted">Selecione um horário à esquerda para finalizar a reserva.</p>
                        }

                    </div>

                    @if (!string.IsNullOrEmpty(mensagemStatus))
                    {
                        <div class="alert @(mensagemStatus.Contains("sucesso") ? "alert-success" : "alert-info") mt-3">
                            @mensagemStatus
                        </div>
                    }
                </div>

            </div>
        }
    </MudPaper>

</div>


<style>
    .page-background {
        background-color: #f1f1f1;
        min-height: calc(100vh - 64px);
        padding-bottom: 40px;
    }

    .panel-container {
        background-color: #ffffff;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        width: 95%;
        margin: 0 auto;
    }

    .slot-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        max-height: 350px;
        overflow-y: auto;
        padding: 5px;
    }

    .slot-item {
        font-weight: 500;
        font-size: 0.9em;
    }
</style>
