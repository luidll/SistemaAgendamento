@page "/agendamento"
@layout MainLayout

<h3>Agendamento: Selecione o Local</h3>
<p class="text-muted">Escolha a sala ou auditório que deseja reservar.</p>

@if (!string.IsNullOrEmpty(MensagemStatus))
{
    <div class="alert alert-danger">@MensagemStatus</div>
}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
    @if (ListaDeSalas.Any())
    {
        @foreach (var sala in ListaDeSalas)
        {
            <div class="col">
                <div class="card h-100 shadow-sm sala-card border-0">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-start mb-3">
                            <div class="sala-image-placeholder me-3" style="background-image: url('@sala.ImagemUrl')">
                                @if (string.IsNullOrEmpty(sala.ImagemUrl))
                                {
                                    <i class="fa fa-camera display-6 text-secondary"></i>
                                }
                            </div>

                            <div>
                                <h5 class="card-title mb-1 fw-bold">@sala.Nome</h5>
                                <span class="badge bg-light text-dark border">
                                    <i class="fa fa-users"></i> @sala.Capacidade pessoas
                                </span>
                            </div>
                        </div>

                        <p class="mb-1"><small class="text-muted"><i class="fa fa-map-marker-alt"></i> @sala.Localizacao</small></p>

                        <div class="mt-auto text-end pt-3">
                            <button class="btn btn-success btn-sm px-4 rounded-pill" @onclick="() => AbrirFormularioDeReserva(sala.Id)">
                                Agendar <i class="fa fa-arrow-right ms-1"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-light border text-center py-5">
                <i class="fa fa-building fa-3x text-muted mb-3"></i>
                <h5>Nenhuma sala disponível</h5>
                <p>Entre em contato com o administrador para cadastrar os locais.</p>
            </div>
        </div>
    }
</div>

<style>
    .sala-card {
        transition: transform 0.2s;
    }

        .sala-card:hover {
            transform: translateY(-5px);
        }

    .sala-image-placeholder {
        width: 70px;
        height: 70px;
        border-radius: 12px;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        background-size: cover;
        background-position: center;
        flex-shrink: 0;
    }
</style>