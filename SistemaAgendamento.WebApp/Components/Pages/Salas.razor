@page "/admin/salas"
@layout MainLayout
@rendermode InteractiveServer

<MudPaper Class="pa-4 mb-4 mt-4" Elevation="1" Style="border: 1px solid #e5e7eb; border-radius: 8px;">
    <MudText Typo="Typo.h4" Style="color: rgb(28, 154, 186);" Class="fw-bold text-center">Administração de Salas de Reunião</MudText>
    <MudText Typo="Typo.subtitle2" Class="text-muted mt-1 text-center">
        Gerenciamento dos recursos disponíveis para agendamento.
    </MudText>
    <MudDivider Class="mb-6 mt-4" Style="border-color: darkgrey" />

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(salaAtual.Id == 0 ? "Cadastrar Nova Sala" : "Editar Sala")</h5>

        <EditForm Model="salaAtual" OnValidSubmit="SalvarSala" FormName="SalaForm">
            <DataAnnotationsValidator />

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nome da Sala</label>
                    <InputText @bind-Value="salaAtual.Nome" class="form-control" />
                    <ValidationMessage For="@(() => salaAtual.Nome)" class="text-danger" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Capacidade</label>
                    <InputNumber @bind-Value="salaAtual.Capacidade" class="form-control" />
                    <ValidationMessage For="@(() => salaAtual.Capacidade)" class="text-danger" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Localização</label>
                    <InputText @bind-Value="salaAtual.Localizacao" class="form-control" placeholder="Ex: Prédio A, 3º andar" />
                </div>
                <div class="col-12">
                    <label class="form-label">Descrição</label>
                    <InputTextArea @bind-Value="salaAtual.Descricao" class="form-control" rows="2" />
                </div>
                <div class="col-12">
                    <label class="form-label">Link da Imagem (URL)</label>
                    <InputText @bind-Value="salaAtual.ImagemUrl" class="form-control" />
                </div>
                <div class="col-12 d-flex align-items-center mt-3">
                    <div class="form-check form-switch">
                        <InputCheckbox @bind-Value="salaAtual.Ativo" class="form-check-input" id="ativoSwitch" />
                        <label class="form-check-label" for="ativoSwitch">Ativa</label>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensagemStatus))
            {
                <div class="alert alert-info mt-3">@mensagemStatus</div>
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <span class="bi bi-save"></span> Salvar Sala
                </button>
                <button type="button" class="btn btn-secondary" @onclick="LimparFormulario">
                    <span class="bi bi-x-circle"></span> Limpar
                </button>
            </div>
        </EditForm>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        Salas Cadastradas
    </div>
    <div class="card-body">
        @if (listaSalas.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Capacidade</th>
                        <th>Localização</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sala in listaSalas)
                    {
                        <tr>
                            <td>@sala.Nome</td>
                            <td>@sala.Capacidade</td>
                            <td>@sala.Localizacao</td>
                            <td>
                                @if (sala.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CarregarParaEdicao(sala)">Editar</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletarSala(sala.Id)">Deletar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><em>Nenhuma sala cadastrada.</em></p>
        }
    </div>
</div>
</MudPaper>
