@page "/sistemas"
@layout MainLayout

<h3>Gerenciamento de Sistemas</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(sistemaAtual.Id == 0 ? "Novo Sistema" : "Editando Sistema")</h5>
        
        <div class="row">
            <div class="col-md-8">
                <label class="form-label">Nome do Sistema</label>
                <input class="form-control" @bind="sistemaAtual.Nome" placeholder="Ex: Sistema de Agendamento" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ativoCheck" @bind="sistemaAtual.Ativo" />
                    <label class="form-check-label" for="ativoCheck">
                        Ativo
                    </label>
                </div>
            </div>
        </div>
        
        <div class="mt-3">
            <button class="btn btn-primary" @onclick="Salvar">
                <span class="bi bi-save"></span> Salvar
            </button>
            <button class="btn btn-secondary" @onclick="LimparFormulario">
                <span class="bi bi-x-circle"></span> Limpar
            </button>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        Sistemas Cadastrados
    </div>
    <div class="card-body">
        @if (listaSistemas == null || !listaSistemas.Any())
        {
            <p><em>Nenhum sistema cadastrado. Use o formulário acima.</em></p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in listaSistemas)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Nome</td>
                            <td>
                                @if (s.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CarregarParaEdicao(s)">
                                    <span class="bi bi-pencil-square"></span> Editar
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => Deletar(s)">
                                    <span class="bi bi-trash"></span> Deletar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>