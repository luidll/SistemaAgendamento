@page "/modulos"
@layout MainLayout

@using SistemaAgendamento.Domain.Entities

<h3>Gerenciamento de Módulos</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(moduloAtual.Id == 0 ? "Novo Módulo" : "Editando Módulo")</h5>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Nome do Módulo</label>
                <input class="form-control" @bind="moduloAtual.Nome" placeholder="Ex: Gestão de Usuários" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Sistema Pai</label>
                <select class="form-select" @bind="moduloAtual.SistemaId">
                    <option value="0">-- Selecione um Sistema --</option>
                    @if (listaSistemas != null)
                    {
                        @foreach (var s in listaSistemas)
                        {
                            <option value="@s.Id">@s.Nome</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label class="form-label">URL Amigável</label>
                <input class="form-control" @bind="moduloAtual.Url" placeholder="Ex: /financeiro" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ícone (FontAwesome)</label>
                <input class="form-control" @bind="moduloAtual.Icon" placeholder="Ex: fas fa-dollar-sign" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ativoCheck" @bind="moduloAtual.Ativo" />
                    <label class="form-check-label" for="ativoCheck">
                        Ativo
                    </label>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" @onclick="Salvar">
                <span class="bi bi-save"></span> Salvar
            </button>
            <button class="btn btn-secondary" @onclick="LimparFormulario">
                <span class="bi bi-x-circle"></span> Limpar
            </button>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        Módulos Cadastrados
    </div>
    <div class="card-body">
        @if (listaModulos == null)
        {
            <p><em>Carregando...</em></p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Sistema Pai</th>
                        <th>URL</th>
                        <th>Ícone</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in listaModulos)
                    {
                        <tr>
                            <td>@m.Id</td>
                            <td>@m.Nome</td>
                            <td>@m.Sistema?.Nome</td>
                            <td>@m.Url</td>
                            <td><i class="@m.Icon"></i> @m.Icon</td>
                            <td>
                                @if (m.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => CarregarParaEdicao(m)">
                                    <span class="bi bi-pencil-square"></span> Editar
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => Deletar(m)">
                                    <span class="bi bi-trash"></span> Deletar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
