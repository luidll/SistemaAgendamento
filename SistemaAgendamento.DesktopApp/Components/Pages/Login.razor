@page "/"
@using SistemaAgendamento.DesktopApp.Components.Layout
@layout EmptyLayout

<div style="padding: 2rem; max-width: 400px; margin: 4rem auto; border: 1px solid #ccc; border-radius: 8px;">

    <h3 style="text-align: center;">Controle de Acesso</h3>
    <p style="text-align: center; color: #888;">Administrador Master</p>

    <div style="margin-top: 1.5rem;">
        <label>Login</label>
        <input class="form-control" @bind="login" />
    </div>

    <div style="margin-top: 1rem;">
        <label>Senha</label>
        <input class="form-control" type="password" @bind="senha" />
    </div>

    @if (!string.IsNullOrEmpty(mensagemErro))
    {
        <div style="color: red; margin-top: 1rem; text-align: center;">
            @mensagemErro
        </div>
    }

    <button class="btn btn-primary" style="width: 100%; margin-top: 2rem;" @onclick="FazerLogin">
        Entrar
    </button>

</div>