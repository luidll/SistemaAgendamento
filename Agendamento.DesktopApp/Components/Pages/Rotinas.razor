@page "/rotinas"
@layout MainLayout

@using Agendamento.Core.Entities

<h3>Gerenciamento de Rotinas</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(rotinaAtual.Id == 0 ? "Nova Rotina" : "Editando Rotina")</h5>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Nome da Rotina</label>
                <input class="form-control" @bind="rotinaAtual.Nome" placeholder="Ex: Criar Usuário" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Módulo Pai</label>
                <select class="form-select" @bind="rotinaAtual.ModuloId">
                    <option value="0">-- Selecione um Módulo --</option>
                    @if (listaModulos != null)
                    {
                        @foreach (var m in listaModulos)
                        {
                            <option value="@m.Id">@($"{m.Sistema?.Nome} - {m.Nome}")</option>
                        }
                    }
                </select>
            </div>
        </div>
        
        <div class="row mt-3">
             <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ativoCheck" @bind="rotinaAtual.Ativo" />
                    <label class="form-check-label" for="ativoCheck">
                        Ativo
                    </label>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" @onclick="Salvar">
                <span class="bi bi-save"></span> Salvar
            </button>
            <button class="btn btn-secondary" @onclick="LimparFormulario">
                <span class="bi bi-x-circle"></span> Limpar
            </button>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        Rotinas Cadastradas
    </div>
    <div class="card-body">
        @if (listaRotinas == null)
        {
            <p><em>Carregando...</em></p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Módulo Pai</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in listaRotinas)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.Nome</td>
                            <td>@($"{r.Modulo?.Sistema?.Nome} / {r.Modulo?.Nome}")</td>
                            <td>
                                @if (r.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CarregarParaEdicao(r)">
                                    <span class="bi bi-pencil-square"></span> Editar
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => Deletar(r)">
                                    <span class="bi bi-trash"></span> Deletar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>