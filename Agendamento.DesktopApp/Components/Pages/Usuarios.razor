@page "/usuarios"
@layout MainLayout

@using Agendamento.Core.Entities

<h3>Gerenciamento de Usuários</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(usuarioAtual.Id == 0 ? "Novo Usuário" : "Editando Usuário")</h5>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Nome Completo</label>
                <input class="form-control" @bind="usuarioAtual.NomeCompleto" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input class="form-control" type="email" @bind="usuarioAtual.Email" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">CPF</label>
                <input class="form-control" @bind="usuarioAtual.Cpf" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Telefone</label>
                <input class="form-control" @bind="usuarioAtual.Telefone" />
            </div>
        </div>
        <hr />
        <div class="row mt-2">
            <div class="col-md-12">
                <label class="form-label">Login</label>
                <input class="form-control" @bind="usuarioAtual.Login" />
            </div>
        </div>
        
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Senha</label>
                <input class="form-control" type="password" @bind="senha" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Confirmar Senha</label>
                <input class="form-control" type="password" @bind="confirmarSenha" />
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(mensagemErro))
        {
            <div classclass="alert alert-danger mt-3">@mensagemErro</div>
        }
        
        <div class="mt-3">
            <button class="btn btn-primary" @onclick="Salvar">
                <span class="bi bi-save"></span> Salvar
            </button>
            <button class="btn btn-secondary" @onclick="LimparFormulario">
                <span class="bi bi-x-circle"></span> Limpar
            </button>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        Usuários Cadastrados
    </div>
    <div class="card-body">
        @if (listaUsuarios == null)
        {
            <p><em>Carregando...</em></p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Email</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in listaUsuarios)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.NomeCompleto</td>
                            <td>@u.Login</td>
                            <td>@u.Email</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CarregarParaEdicao(u)">
                                    <span class="bi bi-pencil-square"></span> Editar
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => Deletar(u)">
                                    <span class="bi bi-trash"></span> Deletar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>