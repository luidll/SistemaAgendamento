@inherits LayoutComponentBase
@namespace Agendamento.WebApp.Components.Layout

<div class="page">

    <header>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIrC5CkPp1fF5rZLrP0GqPEpNPk+En1JkPxhIYfSv6" crossorigin="anonymous"></script>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm fixed-top" style="background-color:white;">
            <div class="container container-lg">

                <a class="navbar-brand d-flex align-items-center" href="/dashboard">
                    <img src="https://transparencia.sanesul.ms.gov.br/images/logo.png" alt="Logo" class="me-2" style="height:60px;">
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#navbarMenu"
                        aria-controls="navbarMenu" aria-expanded="false" aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <NavLink class="nav-link" style="color: black !important;" href="/dashboard">
                                <i class="fa fa-home text-center"></i> Dashboard
                            </NavLink>
                        </li>

                        @if (ListaDeModulos.Any())
                        {
                            foreach (var modulo in ListaDeModulos)
                            {
                                <li class="nav-item">
                                    <NavLink class="nav-link" style="color: black !important;" href="@modulo.Url">
                                        <i class="@modulo.Icon text-center"></i> @modulo.Nome
                                    </NavLink>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <NavLink class="nav-link" style="color: black !important;" href="/regras">
                                <i class="fa fa-calendar-check text-center"></i> Regras
                            </NavLink>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link mr-3" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="profile-circle">
                                    @UserInitials
                                </div>
                            </a>

                            <div class="dropdown-menu dropdown-menu-end drop-menu shadow">

                                <a class="dropdown-item drop-item" href="#">Meu perfil</a>
                                <a class="dropdown-item drop-item" href="#">Alterar Senha</a>

                                <hr class="dropdown-divider" />
                                <a class="dropdown-item drop-item text-danger" href="/logout"> Sair</a>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <main class="content px-4 py-5 mt-5">
        @Body
    </main>

</div>
