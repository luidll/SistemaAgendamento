@page "/agendamentos"
@layout MainLayout

@using Agendamento.Core.Entities
@using System.Linq
@using System.Security.Claims

<h3>Agendamento de Compromissos</h3>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">@(agendamentoAtual.Id == 0 ? "Novo Agendamento" : "Editar Agendamento")</h5>

        <EditForm Model="agendamentoAtual" OnValidSubmit="SalvarAgendamento" FormName="AgendamentoForm">
            <DataAnnotationsValidator />

            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Título</label>
                    <InputText @bind-Value="agendamentoAtual.Titulo" class="form-control" placeholder="Assunto do agendamento" />
                    <ValidationMessage For="@(() => agendamentoAtual.Titulo)" class="text-danger" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Data/Hora Início</label>
                    <InputDate @bind-Value="agendamentoAtual.DataHoraInicio" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Data/Hora Fim</label>
                    <InputDate @bind-Value="agendamentoAtual.DataHoraFim" class="form-control" />
                </div>

                <div class="col-12">
                    <label class="form-label">Descrição (Opcional)</label>
                    <InputTextArea @bind-Value="agendamentoAtual.Descricao" class="form-control" rows="3" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensagemErro))
            {
                <div class="alert alert-danger mt-3">@mensagemErro</div>
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <span class="bi bi-calendar-plus"></span> Salvar Agendamento
                </button>
                <button type="button" class="btn btn-secondary" @onclick="LimparFormulario">
                    <span class="bi bi-x-circle"></span> Cancelar
                </button>
            </div>
        </EditForm>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header">
        Seus Agendamentos
    </div>
    <div class="card-body">
        @if (listaAgendamentos == null || !listaAgendamentos.Any())
        {
            <p><em>Você não tem agendamentos.</em></p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Início</th>
                        <th>Fim</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in listaAgendamentos.OrderBy(a => a.DataHoraInicio))
                    {
                        <tr>
                            <td>@a.Titulo</td>
                            <td>@a.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@a.DataHoraFim.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CarregarParaEdicao(a.Id)">Editar</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletarAgendamento(a.Id)">Deletar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>